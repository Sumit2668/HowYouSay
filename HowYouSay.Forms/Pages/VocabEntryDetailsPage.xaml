<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:HowYouSay;assembly=HowYouSay.Forms"
	xmlns:views="clr-namespace:HowYouSay.Views;assembly=HowYouSay.Forms"
	x:Class="HowYouSay.Pages.VocabEntryDetailsPage">
	<StackLayout>
		<Label Text="{local:Translate EntryPageTitle}" XAlign="Center" />
		<Entry 
			Text="{Binding Title}"
			Placeholder="{local:Translate EntryInputPlaceholder}" 
			HorizontalTextAlignment="Center"/>

		<ListView
			x:Name="listView" 
			VerticalOptions="FillAndExpand"
			HasUnevenRows="true"
			BackgroundColor="#F3F3F3"
			SeparatorColor="Transparent"
			SeparatorVisibility="None"
			ItemsSource="{Binding Translations}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<views:TranslationCardView />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<StackLayout Orientation="Horizontal" HorizontalOptions="Center">
			<Button Image="button_bookmark.png"/>
			
			<Button Image="button_record_mini.png"/>
			
		</StackLayout>

	</StackLayout>
</ContentPage>
